#include <iostream>
using namespace std;
int main() {
    setlocale(LC_ALL, "rus");
    int a;
    cout << "Введите значение a: ";
    cin >> a;

    int sum = 0;
    for (int i = a; i <= 500; ++i) {
        sum += i;
    }

    cout << "Сумма целых чисел от " << a << " до 500 равна " << sum << std::endl;
}
