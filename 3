#include <iostream>
using namespace std;
int factorial(int n)
{
    int result = 1;
    for (int i = 1; i <= n; i++)
        result = result * i;
    return result;
}
int main()
{
    setlocale(LC_ALL, "rus");
    int number = 7; int func = factorial(number);
    cout << "Факториал числа " << number << " = " << func;
}
