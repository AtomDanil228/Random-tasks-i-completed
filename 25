#include <iostream>
using namespace std;
int main() {
    setlocale(LC_ALL, "rus");
    int sum = 0;
    for (int i = 1; i <= 1000; ++i) {
        sum += i;
    }

    double average = (double)sum / 1000;

    cout << "Среднее арифметическое всех целых чисел от 1 до 1000 равно " << average << endl;
    return 0;
}
